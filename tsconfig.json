{
    "compilerOptions": {
      "target": "ESNext", 
      "module": "ESNext", 
      "moduleResolution": "node",
      "strict": true,
      "jsx": "react-jsx",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "noEmit": true, 
      "isolatedModules": true, 
      "baseUrl": ".", 
      "paths": { 
        "@/*": ["src/*"]
      },
      "types": ["vite/client"] 
    },
    "include": ["src/**/*", "vite.config.ts"],
    "exclude": ["node_modules", "dist"]
  }