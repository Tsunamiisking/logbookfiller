{
    "compilerOptions": {
      "target": "ESNext", // Better for modern browsers (Vercel supports ESNext)
      "module": "ESNext", // Vite works best with ES modules
      "moduleResolution": "node", // Required for proper module resolution
      "strict": true,
      "jsx": "react-jsx", // For React 17+ JSX transform
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "noEmit": true, // Vite handles transpilation, not tsc
      "isolatedModules": true, // Required for Vite's type checking
      "baseUrl": ".", // Optional: helps with path aliases
      "paths": { // Optional: if you use path aliases
        "@/*": ["src/*"]
      },
      "types": ["vite/client"] // For Vite-specific types (import.meta.env, etc.)
    },
    "include": ["src/**/*", "vite.config.ts"],
    "exclude": ["node_modules", "dist"]
  }